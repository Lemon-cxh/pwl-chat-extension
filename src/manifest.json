{
  "manifest_version": 2,
  "name": "摸鱼派聊天室",
  "version": "0.2.3",
  "homepage_url": "https://github.com/Lemon-cxh/pwl-chat-extension",
  "description": "摸鱼派聊天室插件",
  "permissions": [
    "background",
    "cookies",
    "storage",
    "notifications",
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/128.png",
    "48": "icons/128.png",
    "128": "icons/128.png"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "聊天室",
    "default_icon": {
      "19": "icons/128.png",
      "38": "icons/128.png"
    }
  },
  "content_scripts": 
	[
		{
			"matches": ["<all_urls>"],
			"js": ["js/content-script.js"],
			"run_at": "document_start"
		}
	]
}
